{
  "scripts": {
    "start": "react-scripts start",
    "start:mock": "REACT_APP_USE_MOCK=true react-scripts start",
    "start:prod": "REACT_APP_USE_MOCK=false REACT_APP_API_URL=https://api.icnvictoria.com react-scripts start",
    "start:dev": "REACT_APP_USE_MOCK=true REACT_APP_SHOW_DEV_TOOLS=true react-scripts start",
    "build": "react-scripts build",
    "build:mock": "REACT_APP_USE_MOCK=true react-scripts build",
    "build:prod": "REACT_APP_USE_MOCK=false REACT_APP_API_URL=https://api.icnvictoria.com react-scripts build",
    
    "test": "react-scripts test",
    "test:ci": "CI=true react-scripts test --coverage --watchAll=false",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:watch": "react-scripts test",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "test:unit": "react-scripts test --testPathPattern=src/.*\\.test\\.(js|jsx)$ --watchAll=false",
    "test:integration": "react-scripts test --testPathPattern=src/__tests__/integration --watchAll=false",
    "test:components": "react-scripts test --testPathPattern=src/components --watchAll=false",
    
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    
    "test:all": "npm run test:ci && npm run test:e2e",
    "test:quick": "react-scripts test --bail --findRelatedTests",
    
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.{js,jsx}",
    "lint:fix": "eslint src/**/*.{js,jsx} --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,css,md}\"",
    "validate": "npm run lint && npm run format:check && npm run test:ci",
    "analyze": "source-map-explorer \"build/static/js/*.js\"",
    
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-prettier": "^4.2.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "source-map-explorer": "^2.5.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/reportWebVitals.js",
      "!src/**/*.test.{js,jsx}",
      "!src/**/__tests__/**",
      "!src/setupTests.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}